          <div class=" col-md-10 offset-md-1 col-lg-9 offset-lg-2">
            <h1>Profile</h1>
            <%= form_with model: @user, url: profile_path, method: :put do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="mb-2">
                <%= f.label :avatar %>
                <div class='mt-2'>
                  <div class="mb-2 d-flex flex-column align-items-center">
                    <%= image_tag @user.avatar.url,
                                  class: 'rounded-circle',
                                  id: 'preview',
                                  size: '90x90' %>
                  </div>
                  <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
                  <%= f.hidden_field :avatar_cache %>
                </div>
              </div>
              <div class="mb-2">
                <%= f.label :first_name, class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
              <div class="mb-2">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
              <div class="mb-2 d-flex justify-content-end my-2">
