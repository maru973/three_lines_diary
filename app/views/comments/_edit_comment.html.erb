<tr id="comment-<%= comment.id %>">
  <td style="width: 60px">
    <%= image_tag current_user.avatar_url, class: 'rounded-circle', width: '50', height: '50' %>
  </td>
  <td>
    <h3 class="small"><%= comment.user.first_name %></h3>
    <%= form_with model: comment, url: comment_path(comment), local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :Comment %>
      <%= f.text_area :body, class: 'form-control mb-3', row: '4', placeholder: "Comment" %>
      <div class="mx-5 mt-2 d-flex justify-content-center">
        <%= f.submit nil, class: 'btn btn-dark btn-outline-light' %>
      </div>
    <% end %>
  </td>
</tr>