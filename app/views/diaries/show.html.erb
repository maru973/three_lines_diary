<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <!-- 日記内容 -->
      <article class="card shadow" style="background-color: #FFFAF0;">
        <!-- 丸のアイコンを縦並びにする部分 -->
        <div class="d-flex flex-column justify-content-start align-items-center p-3" style="width: 20px; height: 40px;">
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
          <i class="bi bi-circle mb-2"></i>
        </div>
        <div class="card-body mx-4">
          <div class='row'>
            <div class='col-md-7 mx-auto'>
              <%= image_tag @diary.diary_image_url, class: 'card-img-top img-fluid px-4', width: '300', height: '200' %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @diary.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@diary.user.first_name}" %></li>
                <li class="list-inline-item"><%= @diary.created_at %></li>
              </ul>
              <% if current_user.own?(@diary) %>
                <div class='d-flex justify-content-end'>
                  <%= link_to edit_diary_path(@diary), id: "button-edit-#{@diary.id}" do %>
                    <i class="bi bi-pencil-fill"></i>
                  <% end %>
                  <%= link_to diary_path(@diary), id: "button-delete-#{@diary.id}", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
                    <i class="bi bi-trash-fill"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-md-6">
                <strong>User's Lines</strong>
                <p><%= simple_format(@diary.first_line) %></p>
                <p><%= simple_format(@diary.second_line) %></p>
                <p><%= simple_format(@diary.third_line) %></p>
              </div>
              <div class="col-md-6">
                <strong>Modified Lines</strong>
                <p><%= simple_format(@translated_first_line) %></p>
                <p><%= simple_format(@translated_second_line) %></p>
                <p><%= simple_format(@translated_third_line) %></p>
              </div>
            </div>
          </div>
        </div>
      </article>
      <%= link_to "Back to Index", diaries_path, class: "btn btn-primary" %>
    </div>
  </div>
  <!-- コメントフォーム -->
  <%= render 'comments/form', comment: @comment, diary: @diary %>
  <!-- コメントエリア -->
  <div class="row">
    <div class="col-lg-8 offset-lg-2">

        <table class="table">
          <tbody id="table-comment">
            <%= render @comments%>
          </tbody>
        </table>

    </div>
  </div>
</div>