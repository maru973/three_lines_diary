<article class="card shadow" style="background-color: #FFFAF0;">
  <%= form_with model: diary, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <!-- 丸のアイコンを縦並びにする部分 -->
  	<div class="d-flex flex-column justify-content-start align-items-center p-3" style="width: 20px; height: 40px;">
    	<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
      <i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
			<i class="bi bi-circle mb-2"></i>
      <i class="bi bi-circle mb-2"></i>
  	</div>
    <div class="m-5">
      <div class="m-4 d-flex flex-column align-items-center">
        <%= image_tag @diary.diary_image_url, class: 'preview', size: '300x200' %>
      </div>
      <%= f.label :diary_image %>
      <%= f.file_field :diary_image, class: 'form-control w-50', accept: 'image/*' %>
      <%= f.hidden_field :diary_image_cache %>
    </div>
    <div class="m-5">
      <%= f.label :first_line %>
      <%= f.text_field :first_line, class: 'form-control', id: 'first_line' %>
    </div>
    <div class="m-5">
      <%= f.label :second_line %>
      <%= f.text_field :second_line, class: 'form-control', id: 'second_line' %>
    </div>
    <div class="m-5">
      <%= f.label :third_line %>
      <%= f.text_field :third_line, class: 'form-control', id: 'third_line' %>
    </div>
    <div class="mx-5 mb-2 d-flex justify-content-center">
      <%= f.submit "Done", class: 'btn btn-dark btn-lg' %>
    </div>
  <% end %>
</article>

